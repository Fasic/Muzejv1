<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#eeeeee" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <stroke android:width="1px" android:color="#720f10" />
        </shape>
    </item>
    <item>
        <shape>

            <solid android:color="#d0d0d0" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <stroke android:width="1px" android:color="#720f10" />

        </shape>
    </item>


</selector>